@{
    Layout = "_LayoutApp";
}

<h2>Gráfico de Despesas Mensais</h2>

<div>
    <canvas id="myChart"></canvas>
</div>

<script>
    const ctx = document.getElementById('myChart');

    const meses = @Html.Raw(Json.Serialize(ViewBag.Meses));
    const totais = @Html.Raw(Json.Serialize(ViewBag.Totais));

    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: meses, // Meses em ordem correta
            datasets: [{
                label: 'Despesas (R$)',
                data: totais,
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


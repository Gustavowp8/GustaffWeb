@model IEnumerable<DespesasModel>

@{
    Layout = "_LayoutApp";
}

@if (TempData.ContainsKey("mensagem"))
{
    var mensagem = MensagemModel.Desserializar(TempData["mensagem"].ToString());
    <partial name="_Mensagem" model="mensagem" />
}

<h1>Teste pass</h1> 

@if (Model.Count() > 0)
{
    @foreach(var g in Model)
    {

        <div class="mPago">

            <div>
                <h4>@g.Titulo</h4>
                <p>@g.Preco</p>
            </div>

            <div>
                <button class="btn btn-sm btn-primary">opções</button>
            </div>

        </div>
    }
}
else
{
    <h2>Não há despesas</h2>
}
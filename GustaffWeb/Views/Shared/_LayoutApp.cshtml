<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GustaffWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/siteDois.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GustaffWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <nav>
        <div class="logo"> Despesas </div>

        <div class="menu-btn">
            <i class="fa fa-bars fa-2x" onclick="menuShow()"></i>
        </div>

        <ul>
            <li> <a href="#" class="active">Inicio</a> </li>
            <li> <a href="#">Apps</a> </li>
            <li> <a href="#">Contatos</a> </li>
            <li> <a href="#">Ajuda</a> </li>
            <li> <a href="#"> Sobre</a> </li>
        </ul>
    </nav>
    <br />
    <br />
    <br />
    <br />

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <br />
    <br />
    <br />
    <br />
    <footer>
        <div class="aMenu">
            <div>
                <button type="button" class="btn btn-light" data-toggle="modal" data-target="#exampleModalCenter">
                    <img src="~/icones/add.png" alt="Adicionar" />
                </button>
            </div>
            <div>
                <img src="~/icones/gra.png" alt="Gráfico" />
            </div>
            <div>
                <img src="~/icones/list.png" alt="Lista" />
            </div>
        </div>
    </footer>

    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true"> 
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Adicionar Despesa</h5>
                </div>
                <div class="modal-body">
                    @await Html.PartialAsync("_AdicionarGastos", new GustaffWeb.Models.DespesasModel())
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/app.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>